{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",

  "name": "mail",
  "projectType": "library",

  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "parallel": false,
        "commands": [
          "rm --force dist/tests.json",
          "mkdir --parents dist",
          "go test ./... -json | tee dist/go-test.json"
        ]
      }
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    },
    "tidy": {
      "executor": "@nx-go/nx-go:tidy"
    }
  }
}
