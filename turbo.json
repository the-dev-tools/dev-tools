{
  "$schema": "https://turbo.build/schema.json",
  "daemon": false,
  "dangerouslyDisablePackageManagerCheck": true,
  "globalEnv": ["ELECTRON_OVERRIDE_DIST_PATH", "PUBLIC_*", "NODE_ENV"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "//#lint:prettier": {},
    "//#lint:syncpack": {},
    "lint": {
      "dependsOn": ["//#lint:syncpack", "//#lint:prettier"]
    }
  }
}
