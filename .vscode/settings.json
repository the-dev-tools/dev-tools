{
  "eslint.options": { "flags": ["unstable_config_lookup_from_file", "unstable_ts_config"] },
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "nix.serverSettings": { "nixd": { "formatting": { "command": ["alejandra"] } } },
  "tailwindCSS.experimental.classRegex": [
    // https://github.com/paolotiu/tailwind-intellisense-regex-list#tailwind-merge
    ["(?:twMerge|twJoin)\\(([^;]*)[\\);]", "[`'\"`]([^'\"`;]*)[`'\"`]"],
    // https://github.com/tailwindlabs/tailwindcss/issues/7553#issuecomment-735915659
    "tw`([^`]*)"
  ],
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsdk": "node_modules/typescript/lib"
}
