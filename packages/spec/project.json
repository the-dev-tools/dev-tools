{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",

  "name": "spec",
  "projectType": "library",

  "targets": {
    "pre-dev": {
      "dependsOn": ["build"]
    },

    "dev": {
      "command": "nx watch --projects=spec -- nx run spec:build"
    },

    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "parallel": false,
        "commands": ["tsp compile api", "buf generate", "node lib/collect-file-descriptors.ts"]
      }
    },

    "pre-lint": {
      "dependsOn": ["build"]
    },

    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "pnpm buf lint"
      }
    },

    "pre-test": {
      "dependsOn": ["build"]
    }
  }
}
