{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",

  "name": "server",
  "projectType": "application",

  "implicitDependencies": ["db", "spec"],

  "targets": {
    "build": {
      "dependsOn": ["db:generate", "spec:build"],
      "executor": "nx:run-commands",
      "cache": false,
      "options": {
        "cwd": "{projectRoot}",
        "command": "go build -o dist/server cmd/server/server.go"
      }
    },
    "build-ci": {
      "dependsOn": ["db:generate-ci", "spec:build"],
      "executor": "nx:run-commands",
      "cache": true,
      "options": {
        "cwd": "{projectRoot}",
        "command": "go build -o dist/server cmd/server/server.go"
      }
    },
    "dev": {
      "dependsOn": ["db:generate", "spec:build"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "go run cmd/server/server.go"
      }
    },
    "test": {
      "dependsOn": ["db:generate", "spec:build"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "go test -p 8 ./... -timeout 30s"
      }
    },
    "test:ci": {
      "dependsOn": ["db:generate-ci", "spec:build"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "parallel": false,
        "commands": [
          "rm --force dist/tests.json",
          "mkdir --parents dist",
          "go test ./... -json -timeout 60s | tee dist/go-test.json"
        ]
      }
    },
    "lint": {
      "dependsOn": ["db:generate", "spec:build"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "parallel": false,
        "commands": ["golangci-lint run --allow-parallel-runners", "go tool norawsql the-dev-tools/server/..."]
      }
    },
    "tidy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "go mod tidy"
      }
    }
  }
}
