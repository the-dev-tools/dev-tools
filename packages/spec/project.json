{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",

  "name": "spec",
  "projectType": "library",

  "targets": {
    "pre-dev": {
      "dependsOn": ["build"]
    },

    "dev": {
      "command": "nx watch --projects=spec -- nx run spec:build"
    },

    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "parallel": false,
        "commands": [
          "rimraf dist",
          "tsc --project tsconfig.lib.json",
          "pnpm tsp compile api",
          "node dist/lib/patch-paths.js",
          "pnpm buf generate",
          "node dist/lib/collect-file-descriptors.js"
        ]
      }
    },

    "pre-lint": {
      "dependsOn": ["build"]
    },

    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "pnpm buf lint"
      }
    },

    "pre-test": {
      "dependsOn": ["build"]
    }
  }
}
