{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",

  "name": "authlib",
  "projectType": "library",

  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "go test ./... -timeout 10s"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "golangci-lint run --allow-parallel-runners"
      }
    },
    "tidy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "go mod tidy"
      }
    }
  }
}
