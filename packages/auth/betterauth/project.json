{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",

  "name": "betterauth",
  "projectType": "library",

  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsc",
        "cwd": "packages/auth/betterauth"
      },
      "dependsOn": ["spec:build"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm dev",
        "cwd": "packages/auth/betterauth"
      },
      "dependsOn": ["spec:build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm vitest run",
        "cwd": "packages/auth/betterauth"
      },
      "dependsOn": ["spec:build"]
    }
  }
}
