{
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "nix.serverSettings": { "nixd": { "formatting": { "command": ["alejandra"] } } },
  "tailwindCSS.experimental.classRegex": [
    // https://github.com/paolotiu/tailwind-intellisense-regex-list#tailwind-merge
    ["(?:twMerge|twJoin)\\(([^;]*)[\\);]", "[`'\"`]([^'\"`;]*)[`'\"`]"],
    // https://github.com/tailwindlabs/tailwindcss/issues/7553#issuecomment-735915659
    "tw`([^`]*)"
  ],
  "typescript.tsdk": "node_modules/typescript/lib"
}
