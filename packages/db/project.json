{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",

  "name": "db",
  "projectType": "library",

  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "go test ./... -timeout 10s"
      }
    },
    "test:ci": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "parallel": false,
        "commands": [
          "rm --force dist/tests.json",
          "mkdir --parents dist",
          "go test ./... -json -timeout 30s | tee dist/go-test.json"
        ]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "go fmt"
      }
    },
    "tidy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "go mod tidy"
      }
    }
  }
}
