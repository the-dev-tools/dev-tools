{
  "$schema": "./node_modules/nx/schemas/project-schema.json",

  "name": "root",

  "targets": {
    "pre-test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["rm --force dist/go-test-results.json", "mkdir --parents dist"]
      }
    },

    "lint:format": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["prettier --check .", "syncpack lint"]
      }
    }
  }
}
