{
  "name": "@the-dev-tools/api-recorder-extension",
  "displayName": "API Recorder",
  "author": "dev.tools",
  "version": "0.4.10",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "plasmo build --build-path=dist --zip",
    "dev": "plasmo dev --build-path=dist"
  },
  "dependencies": {
    "@plasmohq/storage": "1.15.0",
    "effect": "3.17.9",
    "magic-sdk": "29.4.2",
    "plasmo": "0.90.5",
    "react": "19.1.1",
    "react-aria-components": "1.12.1",
    "react-dom": "19.1.1",
    "react-icons": "5.5.0",
    "tailwind-merge": "3.3.1",
    "tailwind-variants": "2.1.0",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "~4.1.11",
    "@the-dev-tools/eslint-config": "workspace:^",
    "@the-dev-tools/ui": "workspace:^",
    "@types/chrome": "~0.1.1",
    "@types/node": "~24.3.0",
    "@types/react": "~19.1.8",
    "@types/react-dom": "~19.1.5",
    "devtools-protocol": "~0.0.1490591",
    "postcss": "~8.5.6",
    "tailwindcss": "~4.1.11",
    "typescript": "~5.9.2",
    "typescript-eslint": "~8.40.0"
  },
  "manifest": {
    "host_permissions": ["https://*/*"],
    "permissions": ["debugger", "tabs", "unlimitedStorage"],
    "web_accessible_resources": [
      {
        "resources": ["tabs/auth-callback.html"],
        "matches": ["*://*.magic.link/*"]
      }
    ]
  }
}
