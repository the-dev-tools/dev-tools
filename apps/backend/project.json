{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",

  "name": "backend",
  "projectType": "application",

  "targets": {
    "build": {
      "executor": "@nx-go/nx-go:build",
      "options": {
        "main": "{projectRoot}/cmd/backend/backend.go",
        "outputPath": "{projectRoot}/dist/backend"
      }
    },
    "dev": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "main": "{projectRoot}/cmd/backend/backend.go"
      }
    },
    "test": {
      "command": "go test ./{projectRoot}/... -json >> dist/go-test-results.json"
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    },
    "tidy": {
      "executor": "@nx-go/nx-go:tidy"
    }
  }
}
