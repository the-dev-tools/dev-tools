{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",

  "parallel": 8,

  "targetDefaults": {
    "dev": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "lint": {
      "cache": true
    }
  },

  "release": {
    "versionPlans": true,
    "projects": ["apps/*"],
    "projectsRelationship": "independent",
    "version": {
      "generatorOptions": {
        "preserveLocalDependencyProtocols": true
      }
    },
    "changelog": {
      "projectChangelogs": {
        "createRelease": "github"
      }
    }
  },

  "plugins": ["@nx-go/nx-go"]
}
